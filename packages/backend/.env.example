# KnowMan Backend Configuration
# Copy this file to .env and update values as needed

# ====================
# Server Configuration
# ====================
NODE_ENV=development
PORT=3001
HOST=localhost
VERSION=0.1.0

# ==============
# CORS Settings
# ==============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============
# Database (SQLite)
# ==============
DATABASE_URL=sqlite:./data/knowman.db
DATABASE_LOGGING=false

# ==============
# Redis (Required for background processing)
# ==============
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=  # Optional password
REDIS_DB=0

# ==============
# Security
# ==============
# Change this in production!
JWT_SECRET=change-me-in-production
# API_KEY=  # Optional API key for external integrations

# ==============
# LLM Configuration
# ==============
# Options: local, openai, anthropic, groq
LLM_PROVIDER=local

# For local LLM (Ollama)
LLM_MODEL=llama3.2:3b
LLM_BASE_URL=http://localhost:11434

# For cloud providers, set your API key:
# LLM_API_KEY=your-api-key-here

LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ==============
# Processing Settings
# ==============
MAX_CONTENT_LENGTH=100000
PROCESSING_WORKERS=2
PROCESSING_TIMEOUT=30000

# ==============
# Logging
# ==============
LOG_LEVEL=info
LOG_PRETTY=true