{
  "name": "knowman",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --parallel dev:extension dev:dashboard dev:backend",
    "dev:extension": "bun --cwd packages/extension dev",
    "dev:dashboard": "bun --cwd packages/dashboard dev",
    "dev:backend": "bun --cwd packages/backend dev",
    "build": "bun run build:extension && bun run build:dashboard && bun run build:backend",
    "build:extension": "bun --cwd packages/extension build",
    "build:dashboard": "bun --cwd packages/dashboard build",
    "build:backend": "bun --cwd packages/backend build",
    "test": "bun run test:extension && bun run test:dashboard && bun run test:backend",
    "test:extension": "bun --cwd packages/extension test",
    "test:dashboard": "bun --cwd packages/dashboard test",
    "test:backend": "bun --cwd packages/backend test",
    "lint": "bun run lint:extension && bun run lint:dashboard && bun run lint:backend",
    "lint:extension": "bun --cwd packages/extension lint",
    "lint:dashboard": "bun --cwd packages/dashboard lint",
    "lint:backend": "bun --cwd packages/backend lint",
    "type-check": "bun run type-check:extension && bun run type-check:dashboard && bun run type-check:backend",
    "type-check:extension": "bun --cwd packages/extension type-check",
    "type-check:dashboard": "bun --cwd packages/dashboard type-check",
    "type-check:backend": "bun --cwd packages/backend type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.3"
}
